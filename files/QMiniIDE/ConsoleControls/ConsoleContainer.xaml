<UserControl x:Class="ConsoleControls.ConsoleContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="startbtn" Content="Start" Click="startbtn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50"/>
        <Button x:Name="stopbtn" Content="Stop" Click="stopbtn_Click" HorizontalAlignment="Left" Margin="55,0,0,3" VerticalAlignment="Top" Width="50"/>
        <WindowsFormsHost Grid.Row="1" x:Name="windowsFormsHost" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
